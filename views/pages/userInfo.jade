extends ../layout
block stylesheets
    link(rel="stylesheet", href="/css/userInfo.min.css")
block content
    .container
        include ../includes/sidebar
        .main
            .main-layout
                form.pure-form.pure-form-stacked
                    .pure-g
                        label.pure-u-1 头像
                        .uploadBtnWarp
                            - console.log(user)
                            img.avatar-img(src="#{user.avatar || ''}" class="#{user.avatar ? '' : 'hide'}")
                            input#avatar.uploadBtn(type="file" )

                        label.pure-u-1 用户名
                        input.pure-u-1(type="text" name="username" value="#{user.username}" disabled)

                        label.pure-u-1 昵称
                        input.pure-u-1(type="text" name="nickname" value="#{user.nickname || ''}")

                        label.pure-u-1 性别
                        if(user.gender == 0)
                            input(type="radio" value='0' name="gender" checked)
                        else
                            input(type="radio" value='0' name="gender")
                        em 男

                        if(user.gender == 1)
                            input(type="radio" value='1' name="gender" checked)
                        else
                            input(type="radio" value='1' name="gender" )
                        em 女

                        label.pure-u-1 年龄
                        input.pure-u-1(type="text" name="age" value="#{user.age || ''}")

                        label.pure-u-1 邮箱
                        input.pure-u-1(type="email" name="email" value="#{user.email || ''}")

                        label.pure-u-1 电话
                        input.pure-u-1(type="text" name="phone" value="#{user.phone || ''}")

                        a#submitUserInfo.pure-u-1.pure-button.pure-button-primary(href="javascript:;") 修改
block scripts
    script.
        require(['main'], function () {
            require(['page/userInfo']);
        });