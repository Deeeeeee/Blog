extends ../layout
block stylesheets
    link(rel="stylesheet", href="/css/publish.min.css")
block content
    .pure-g
        include ../includes/sidebar
        .main.pure-u-1.pure-u-md-3-4
            .main-layout
                h1 发布
                - var art = article
                form.pure-form.pure-form-stacked
                    label(for="title") 标题
                    input#title(type="text"  placeholder="title" value="#{article ? article.title : ''}")
                    label() 分类
                    .category-box
                        .select-box
                            select
                                if (category && category.length)
                                    option -请选择-
                                    for item in category
                                        option(value="#{item.categoryNickname}" data-id="#{item._id}") #{item.categoryNickname}
                                else
                                    option 请添加分类
                        a.J_addCategory.pure-button 添加分类
                        a.J_confirmAdd.hide.pure-button.pure-button-primary 确定
                    label 图片
                    ul.uploadWarp
                        //li
                        //    .img-box
                        //        img(src="")
                        //    input(type="text" value='http://woia.asd.waa/1234324234.png')
                        li.uploadBtnWarp
                            input.uploadBtn(type="file",multiple="true")
                    label 正文
                    //div#content #{article ? article.content : ''}
                    textarea#content #{art ? art.content : ''}


                    if(art)
                        a#update.pure-button.pure-button-primary(href="javascript:;" data-id="#{ art._id }" data-authorId="#{art.authorId}") 提交修改
                    else
                        a#submit.pure-button.pure-button-primary(href="javascript:;") 发布


block scripts
    script.
        require(['main'], function () {
            require(['page/publish']);
        });