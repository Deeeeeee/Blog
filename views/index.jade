extends layout
block stylesheets
    link(rel="stylesheet", href="/css/index.min.css")
block content
    .pure-g
        include includes/sidebar
        div.main.pure-u-1.pure-u-md-3-4
            ul.article-list
                each item in articles
                    li
                        h4
                            a(href="/article/#{item._id}") #{item.title}
                        h5
                            if(user && user.username == item.username)
                                span.mine #{item.username}
                            else
                                span #{item.username}
                            | ||
                            span #{item.time.minute}
                            | ||
                            span #{item.type}

                        p #{item.info}
            if(articles.length = 2)
                button#loadMore.pure-button.pure-button-primary 点击加载更多
block scripts
    script.
        require(['main'], function () {
            require(['page/index']);
        });