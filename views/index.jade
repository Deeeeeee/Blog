extends layout
block stylesheets
    link(rel="stylesheet", href="/css/index.min.css")
block content
    .pure-g
        include includes/sidebar
        div.main.pure-u-3-4
            ul.article-list
                each item in articles
                    li
                        h5 #{item.title}
                        p #{item.username} || #{item.time.minute} ||
                            a(href="javascript:;") 详情
                            if(user && user.username == item.username)
                                |  ||
                                a(href="/publish?articleId=#{item._id}") 编辑
                        p #{item.content}
block scripts
    script.
        require(['main'], function () {
            require(['page/index']);
        });